# Database
DATABASE_URL="postgresql://username:password@localhost:5432/health_platform"

# JWT
JWT_SECRET="your-jwt-secret-key"

# Redis
REDIS_URL="redis://localhost:6379"

# Google Cloud (for OCR and NLP)
GOOGLE_APPLICATION_CREDENTIALS="path/to/service-account-key.json"

# OpenAI
OPENAI_API_KEY="your-openai-api-key"

# Google Fit API
GOOGLE_FIT_CLIENT_ID="your-google-fit-client-id"
GOOGLE_FIT_CLIENT_SECRET="your-google-fit-client-secret"
GOOGLE_FIT_REDIRECT_URI="http://localhost:3000/google-fit/callback"

# Apple Health (for iOS app integration)
APPLE_HEALTH_WEBHOOK_SECRET="your-apple-health-webhook-secret"

# Server Configuration
PORT=3001
NODE_ENV="development"

# File Upload
MAX_FILE_SIZE="10mb"
UPLOAD_PATH="./uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Insights Configuration
# 캐시 유효 시간 (초) - 인사이트가 캐시에 저장되는 시간
# 개발: 300 (5분), 스테이징: 1800 (30분), 프로덕션: 3600 (1시간)
AI_INSIGHTS_CACHE_TTL=3600

# 최소 데이터 포인트 - 인사이트 생성에 필요한 최소 건강 데이터 개수
# 개발: 1, 프로덕션: 3 권장
AI_INSIGHTS_MIN_DATA_POINTS=3